<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="bako.behat_selenium_video_extension.config" class="Bako\Behat\BehatSeleniumVideo\ServiceContainer\Config" />

        <service id="bako.behat_selenium_video_extension.video_recorder" class="Bako\Behat\BehatSeleniumVideo\Service\VideoRecorder" />

        <service id="bako.behat_selenium_video_extension.cli_controller" class="Bako\Behat\BehatSeleniumVideo\Cli\BehatSeleniumVideoController">
            <tag name="cli.controller" priority="1"/>
            <argument type="service" id="bako.behat_selenium_video_extension.config" />
        </service>

        <!-- event listener -->
        <service id="bako.behat_selenium_video_extension.behatseleniumvideo_listener" class="Bako\Behat\BehatSeleniumVideo\Listener\BehatSeleniumVideoListener" public="false">
            <tag name="event_dispatcher.subscriber" />
            <argument type="service" id="bako.behat_selenium_video_extension.config" />
            <argument type="service" id="bako.behat_selenium_video_extension.video_recorder" />
        </service>
    </services>
</container>
